<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <input name="description" required id="description" type="text"
  class="form-control" value="<%= article.description %>"/ >
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <input name="markdown" required id="markdown" type="text" class="form-control"
  value="<%= article.markdown %>"/ >
</div>
<div class="form-group">
  <label for="category">Category</label>
  <input name="category" id="category" type="text" readonly class="form-control"
  value='<%= category %>'/ >
</div>
<div class="form-group">
  <label for="author">Author</label>
  <input name="author" id="author" required type="text" readonly
  class="form-control" value="<%= user.username %>"/ >
</div>
<div class="form-group">
  <label for="image">Choose Image</label>
  <input name="file" id="image" required type="file" class="form-control"
  value="<%= article.image %>"/ >
</div>
